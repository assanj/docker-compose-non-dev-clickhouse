# === БАЗА ДАННЫХ POSTGRESQL ===
# Пароль для пользователя PostgreSQL (должен совпадать с DATABASE_PASSWORD)
POSTGRES_PASSWORD=superset

# Настройки подключения Superset к PostgreSQL
DATABASE_DB=superset        # Имя базы данных
DATABASE_USER=superset      # Имя пользователя БД  
DATABASE_PASSWORD=superset  # Пароль пользователя БД (должен совпадать с POSTGRES_PASSWORD)
DATABASE_HOST=db            # Имя контейнера с PostgreSQL
DATABASE_PORT=5432          # Стандартный порт PostgreSQL

# === КЭШ REDIS ===
# Пароль для Redis
REDIS_PASSWORD=superset
# Хост Redis (имя контейнера)
REDIS_HOST=redis

# === БЕЗОПАСНОСТЬ SUPERSET ===
# СЕКРЕТНЫЙ КЛЮЧ - ЗАМЕНИТЕ НА РЕАЛЬНЫЙ СЛУЧАЙНЫЙ КЛЮЧ!
SECRET_KEY=change-this-to-very-secure-random-key-123

# === НАСТРОЙКИ ПРИЛОЖЕНИЯ ===
# Загружать примеры данных (yes/no)
SUPERSET_LOAD_EXAMPLES=no
